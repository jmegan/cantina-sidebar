{
  "manifest_version": 3,
  "name": "Cantina Chatbot Explorer",
  "version": "1.3.0",
  "description": "Browse Cantina's chatbot directory in Chrome's side panel for quick access while browsing",
  
  "permissions": [
    "sidePanel",
    "declarativeNetRequest",
    "declarativeNetRequestWithHostAccess",
    "tabs"
  ],
  
  "incognito": "split",
  
  "background": {
    "service_worker": "background.js"
  },
  
  "side_panel": {
    "default_path": "panel.html"
  },
  
  "action": {
    "default_title": "Open Cantina Chatbot Explorer",
    "default_icon": {
      "16": "icons/icon-16.png",
      "32": "icons/favicon-32x32.png",
      "48": "icons/icon-48.png",
      "128": "icons/icon-128.png"
    }
  },
  
  "icons": {
    "16": "icons/icon-16.png",
    "32": "icons/favicon-32x32.png",
    "48": "icons/icon-48.png",
    "128": "icons/icon-128.png"
  },
  
  "host_permissions": [
    "https://cantina.com/*",
    "https://*.cantina.com/*"
  ],
  
  "declarative_net_request": {
    "rule_resources": [{
      "id": "ruleset_1",
      "enabled": true,
      "path": "rules.json"
    }]
  },
  
  "content_security_policy": {
    "extension_pages": "script-src 'self'; object-src 'self'; frame-src https://cantina.com https://*.cantina.com"
  }
}